<controls:ChildWindow x:Class="CARS.Control.Question"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Title="Question">
    <Grid x:Name="LayoutRoot" Margin="2" MinWidth="200">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="YesButton" Content="Yes" Click="YesButton_Click" Width="75" Height="23" HorizontalAlignment="Center" Margin="0,0,90,0" Grid.Row="1" />
        <Button x:Name="NoButton" Content="No" Click="NoButton_Click" Width="75" Height="23" HorizontalAlignment="Center" Margin="90,0,0,0" Grid.Row="1" />
        <Image Height="32" HorizontalAlignment="Left" Margin="20,0,0,0" Name="icon" Stretch="Fill" VerticalAlignment="Center" Width="32" Source="/CARS;component/Images/Help32x32.png" />
        <TextBlock HorizontalAlignment="Left" Margin="72,20,20,20" Name="question" Text="Question here." TextWrapping="Wrap" VerticalAlignment="Top" MaxWidth="400" />
    </Grid>
</controls:ChildWindow>