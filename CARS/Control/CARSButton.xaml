<UserControl x:Class="CARS.Control.CARSButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Margin="0,2,0,2"
    xmlns:carscontrol="clr-namespace:CARS.Control"			 
    d:DesignHeight="30" d:DesignWidth="150" x:Name="root"
	xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input">

	<Grid x:Name="LayoutRoot" Opacity="1" Height="30" Width="150">
		<Border x:Name="borderPanel" BorderBrush="DarkGray" BorderThickness="2" CornerRadius="5" 
                MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" 
                MouseLeftButtonDown="Border_MouseLeftButtonDown" 
                MouseLeftButtonUp="Border_MouseLeftButtonUp">
			<StackPanel x:Name="stackPanel" Height="30" Width="150" VerticalAlignment="Bottom">
				<TextBlock FontFamily="Verdana" x:Name="contentText" Text="text" Height="14" HorizontalAlignment ="Center" FontSize="12" />
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
